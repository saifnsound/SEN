<% include ../partials/header %>
<div class="container custom">
    <div class="card">
        <h2 class="card-header">Add question</h2>
        <div class="card-body">
            <form action="/questions/add" method="POST">
                <div class="row">
                    <div class="form-group col">
                        <label for="format">Question Format</label>
                        <select class="form-control" name="format">
                            <option value="MCQ">Multiple choice questions</option>
                            <option value="FITB">Fill in the blanks</option>
                            <option value="TF">True/False</option>
                        </select>
                    </div>
                    <div class="form-group col">
                        <label for="subject">Subject</label>
                        <input type="text" name="subject" class="form-control" placeholder="Maths/Science/etc...">
                    </div>
                    <div class="form-group col">
                        <label for="topic">Topic</label>
                        <input type="text" name="topic" class="form-control" placeholder="Enter topic">
                    </div>
                    <div class="form-group col">
                        <label for="difficulty">Difficulty</label>
                        <select class="form-control" name="difficulty">
                            <option value="1"> Easy </option>
                            <option value="2"> Medium </option> 
                            <option value="3"> Hard </option> 
                        </select> 
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col">
                        <label for="question">Question</label>
                        <textarea rows="3" class="form-control" name="question"
                            placeholder="Enter the question here"></textarea>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col">
                        <label for="solution">Solution</label>
                        <input type="text" name="solution" class="form-control" placeholder="Enter the solution to the question">
                    </div>
                </div>
                <div class="row form-check">
                    <div class="form-group col ">
                        <input type="checkbox" class="form-check-input" name="public" class="form-control">
                        <label class="form-check-label" for="public">Public</label>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>
<% include ../partials/footer %>
