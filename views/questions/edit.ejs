<% include ../partials/header %>
<div class="container custom">
    <div class="card">
        <h2 class="card-header">Edit question</h2>
        <div class="card-body">
            <form action="/questions/<%=question._id%>?_method=PUT" method="POST">
                <div class="row">
                    <div class="form-group col">
                        <label for="format">Question Format</label>
                        <select class="form-control" name="question[format]" value="<%=question.format%>">
                            <option value="MCQ">Multiple choice questions</option>
                            <option value="FITB">Fill in the blanks</option>
                            <option value="TF">True/False</option>
                        </select>
                    </div>
                    <div class="form-group col">
                        <label for="subject">Subject</label>
                        <input type="text" name="question[subject]" class="form-control" value="<%=question.subject%>">
                    </div>
                    <div class="form-group col">
                        <label for="topic">Topic</label>
                        <input type="text" name="question[topic]" class="form-control" value="<%=question.topic%>">
                    </div>
                    <div class="form-group col">
                        <label for="difficulty">Difficulty</label>
                        <select class="form-control" name="question[difficulty]">
                            <option value="1"> Easy </option>
                            <option value="2"> Medium </option>
                            <option value="3"> Hard </option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col">
                        <label for="question">Question</label>
                        <textarea rows="3" class="form-control" name="question[question]"> <%=question.question%></textarea>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col">
                        <label for="solution">Solution</label>
                        <input type="text" name="question[solution]" class="form-control"
                            value="<%=question.solution%>">
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>
<% include ../partials/footer %>
