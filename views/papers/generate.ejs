<% include ../partials/header %>
<div class="container custom">
    <div class="card">
        <h2 class="card-header">Add question</h2>
        <div class="card-body">
            <form action="/papers/generate" method="POST">
                <div class="row">
                    <div class="form-group col">
                        <label for="format">Question Format</label>
                        <select multiple class="form-control" name="format">
                            <option value="MCQ">Multiple choice questions</option>
                            <option value="FITB">Fill in the blanks</option>
                            <option value="TF">True/False</option>
                        </select>
                    </div>
                    <div class="form-group col">
                        <label for="subject">Subject</label>
                        <input type="text" name="subject" class="form-control" placeholder="Maths/Science/etc...">
                        <small id="passwordHelpBlock" class="form-text text-muted">
                            For more than one subject put a "/" between each subject.
                        </small>
                    </div>
                    <div class="form-group col">
                        <label for="topic">Topic</label>
                        <input type="text" name="topic" class="form-control" placeholder="Enter topic">
                        <small id="passwordHelpBlock" class="form-text text-muted">
                            For more than one topic put a "/" between each subject.
                        </small>
                    </div>
                    <div class="form-group col">
                        <label for="difficulty">Difficulty</label>
                        <select class="form-control" name="difficulty">
                            <option value="1"> Easy </option>
                            <option value="2"> Medium </option>
                            <option value="3"> Hard </option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col">
                        <label for="name">Name</label>
                        <input type="text" name="name" class="form-control"
                            placeholder="Enter the name of the question question paper">
                    </div>
                    <div class="form-group col">
                        <label for="noOfQuestions">Number of questions</label>
                        <input type="number" name="numberOfQuestions" class="form-control"
                            placeholder="Enter the number of questions">
                    </div>
                    <div class="form-group col">
                        <label for="time">Time Duration of exam</label>
                        <input type="number" name="time" class="form-control"
                            placeholder="Enter the time duration of the exam in hour(s)">
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>
<% include ../partials/footer %>
